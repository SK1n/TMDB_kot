<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="topRatedMovieItem"
            type="com.example.tmdb.network.TopRatedMovies" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_movie_poster"
                android:layout_width="0dp"
                app:imageUrl="@{topRatedMovieItem.posterPath}"
                android:layout_height="150dp"
                android:layout_weight=".30" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".69"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movieTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Movie Title"
                    android:text="@{topRatedMovieItem.title}"
                    android:textSize="24dp" />
                <TextView
                    android:id="@+id/movieOverview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{topRatedMovieItem.overview}"
                    android:hint="Movie Overview" />

                <TextView
                    android:id="@+id/movieRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Movie Rating"
                    android:text="@{`Rating: ` + String.valueOf(topRatedMovieItem.voteAverage)}"
                    />

                <TextView
                    android:id="@+id/movieReleaseDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Movie Release Date"
                    android:text="@{`Release date: ` + topRatedMovieItem.releaseDate}"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>

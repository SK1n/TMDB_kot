<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mov"
            type="com.example.tmdb.ui.home.Movie" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/item_movie_poster"
                android:layout_width="148dp"
                android:layout_height="210dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieTitle"
                android:layout_width="198dp"
                android:layout_height="26dp"
                android:layout_marginStart="60dp"
                android:hint="Movie Title"
                android:text="@{mov.title}"
                app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieOverview"
                android:layout_width="200dp"
                android:layout_height="133dp"
                android:text="@{mov.overview}"
                android:hint="Movie Overview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/item_movie_poster"
                app:layout_constraintTop_toBottomOf="@+id/movieTitle" />

            <TextView
                android:id="@+id/movieRating"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:hint="Movie Rating"
                android:text="@{String.valueOf(mov.rating)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/movieOverview" />

            <TextView
                android:id="@+id/movieReleaseDate"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:hint="Movie Release Date"
                android:text="@{String.valueOf(mov.releaseDate)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/movieRating" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>

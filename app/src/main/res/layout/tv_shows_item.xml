<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="tvShowsItem"
            type="com.example.tmdb.models.TvShowModel" />
    </data>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_movie_poster"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight=".30"
                    app:imageUrl="@{tvShowsItem.poster_path}" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".69"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movieTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Movie Title"
                        android:text="@{tvShowsItem.name}"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/movieOverview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Movie Overview"
                        android:text="@{tvShowsItem.overview}" />

                    <TextView
                        android:id="@+id/movieRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Movie Rating"
                        android:text="@{`Rating: ` + String.valueOf(tvShowsItem.vote_average)}" />

                    <TextView
                        android:id="@+id/movieReleaseDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Movie Release Date"
                        android:text="@{`Release date: ` + tvShowsItem.first_air_date}" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
</layout>

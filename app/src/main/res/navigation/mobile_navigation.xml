<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tmdb.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_movie"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/navigation_movies"
        android:name="com.example.tmdb.ui.movies.MoviesFragment"
        android:label="@string/title_movies"
        tools:layout="@layout/fragment_movies" >
        <action
            android:id="@+id/action_navigation_movies_to_navigation_movie"
            app:destination="@id/navigation_movie" />
    </fragment>

    <fragment
        android:id="@+id/navigation_tv_shows"
        android:name="com.example.tmdb.ui.tvShows.TvShowsFragment"
        android:label="@string/title_tv_shows"
        tools:layout="@layout/fragment_tv_shows" />

    <fragment
        android:id="@+id/navigation_movie"
        android:name="com.example.tmdb.ui.home.movieDetails.MovieDetailsFragment"
        android:label="@string/Movie"
        tools:layout="@layout/fragment_movie_details" >
        <argument
            android:name="movie"
            app:argType="com.example.tmdb.models.MoviesModel" />
        <action
            android:id="@+id/action_navigation_movie_to_navigation_person"
            app:destination="@id/navigation_person" />
    </fragment>
    <fragment
        android:id="@+id/navigation_now_playing_movies"
        android:name="com.example.tmdb.ui.movies.nowPlaying.NowPlayingFragment"
        android:label="@string/title_now_playing"
        tools:layout="@layout/fragment_now_playing_movies" >
        <action
            android:id="@+id/action_navigation_now_playing_movies_to_navigation_movie"
            app:destination="@id/navigation_movie"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/navigation_person"
        android:name="com.example.tmdb.ui.person.PersonFragment"
        tools:layout="@layout/fragment_tv_shows">
        <argument
            android:name="person"
            app:argType="com.example.tmdb.models.CastModel" />
    </fragment>
</navigation>